<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:height="@dimen/drawer_row_height"
    	android:padding="4dp"
    	android:focusable="false">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/drawer_row_height"
        android:gravity="center_vertical"
        android:layout_alignParentLeft="true" >

        <ImageView
            android:id="@+id/rowTagIcon"
            android:layout_width="@dimen/drawer_row_img"
            android:layout_height="@dimen/drawer_row_img"
            android:background="@android:color/transparent"
            android:focusable="false" />

        <TextView
            android:id="@+id/rowTagName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:focusable="false"
            android:singleLine="true"
            android:textAppearance="@style/menuText" />
    </LinearLayout>
	<TextView
        android:id="@+id/rowTagTaskCount"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/drawer_row_height"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:width="24dp"
        android:height="24dp"
        android:focusable="false"
        android:singleLine="true"
        android:textAppearance="@style/menuTextCount"
        android:background="@drawable/row_tag_color_background"/>

</RelativeLayout>
