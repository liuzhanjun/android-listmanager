<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="titleText">
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="amountText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dateText">
        <item name="android:textColor">#7f7f7f</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="menuText">
        <item name="android:textColor">#333</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="menuTextCount">
        <item name="android:textColor">#ddd</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <color name="drawerDivider">#ccc</color>
    <color name="drawerBackground">#dfdfdf</color>
    <color name="pagerBackground">#333</color>
    <color name="pagerText">#dfdfdf</color>
</resources>
